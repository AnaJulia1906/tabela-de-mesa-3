using System;
class Program
{
    private static Investimento investimento;

    static void Main(string[] args)
    {
        int meses = 8;
        double dias = 10;
        double[] valoresInvestidos = { 1000, 5500, 12000 };
        double[] taxasJuros = { 3.0, 2.48, 2.0 };
        Console.WriteLine("Valor Presente\tTaxa de Juros  Per√≠odo(meses)\tValor Futuro");
        Console.WriteLine("-------------------------------------------------------");
        for (int i = 0; i < valoresInvestidos.Length; i++)
        {
             investimento = new Investimento(valoresInvestidos[i], taxasJuros[i], meses, dias);
            double rendimentoFuturo = investimento.CalcularRendimentoFuturo();
            Console.WriteLine($"R$ {valoresInvestidos[i]:F2}\t{taxasJuros[i]:F2}%\t           {meses}\t\tR$ {rendimentoFuturo:F2}");
            Console.ReadLine();
        }
    }
}

internal class Investimento
{
    private double v1;
    private double v2;
    private int meses;
    private double dias;

    public Investimento(double v1, double v2, int meses, double dias)
    {
        this.v1 = v1;
        this.v2 = v2;
        this.meses = meses;
        this.dias = dias;
    }

    internal double CalcularRendimentoFuturo()
    {
        throw new NotImplementedException();
    }
}
